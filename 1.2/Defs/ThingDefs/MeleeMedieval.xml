<Defs>
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>Melee_Pike</defName>
    <label>pike</label>
    <description>A weapon so long that makes your brawler consider it as a ranged weapon. You can stab your opponents far away. Not so useful when melee, though.</description>
    <graphicData>
      <texPath>Things/Weapon/pike</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.9</drawSize>
    </graphicData>
    <uiIconPath>Things/Weapon/pikeIcon</uiIconPath>
    <techLevel>Medieval</techLevel>
    <weaponTags>
      <li>MedievalMeleePike</li>
    </weaponTags>
    <costStuffCount>130</costStuffCount>
    <statBases>
      <WorkToMake>22000</WorkToMake>
      <Mass>2.6</Mass>
      <AccuracyTouch>0.94</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
      <RangedWeapon_Cooldown>2.40</RangedWeapon_Cooldown>
    </statBases>
    <equippedAngleOffset>45</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_pike</defaultProjectile>
        <warmupTime>0.4</warmupTime>
        <range>2.9</range>
      </li>
    </verbs>
    <equippedStatOffsets>
      <MoveSpeed>-1.0</MoveSpeed>
    </equippedStatOffsets>
    <comps>
      <li>
        <compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Poke</li>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>30</power>
        <armorPenetration>0.70</armorPenetration>
        <cooldownTime>3.2</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>LongBlades</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
