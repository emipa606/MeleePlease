    <statBases>
      <WorkToMake>9500</WorkToMake>
      <Mass>9.0</Mass>
    </statBases>
    <equippedAngleOffset>-45</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
