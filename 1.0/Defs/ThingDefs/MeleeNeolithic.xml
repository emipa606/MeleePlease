    </recipeMaker>
    <comps>
      <li>
        <compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
      </li>
    </comps>
    <tools>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
