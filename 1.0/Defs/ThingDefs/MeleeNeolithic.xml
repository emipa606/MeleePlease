    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.4</MoveSpeed>
    </equippedStatOffsets>
    <equippedAngleOffset>-5</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
